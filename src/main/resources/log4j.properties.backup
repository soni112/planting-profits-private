log4j.rootLogger=INFO,stdout,LOGFILE


### Direct log4j properties to STDOUT ###
log4j.appender.stdout=org.apache.log4j.ConsoleAppender
log4j.appender.stdout.Target=System.out
log4j.appender.stdout.layout=org.apache.log4j.PatternLayout
#log4j.appender.stdout.layout.ConversionPattern=%d{dd-MMMM-YYYY HH:MM:SS} [%c] %l - %m%n
log4j.appender.stdout.layout.ConversionPattern=%d{dd-MM-YYYY HH:MM:SS} %p (%t) [%c] - %m%n


# Define the file appender
log4j.appender.LOGFILE=org.apache.log4j.RollingFileAppender

# Define the layout for file appender
log4j.appender.LOGFILE.DatePattern='.'yyyy-MM-dd
log4j.appender.LOGFILE.layout=org.apache.log4j.PatternLayout
log4j.appender.LOGFILE.layout.conversionPattern=%d %p (%t) [%c] - %m%n

# Set the name of the file
log4j.appender.LOGFILE.File=${user.home}/Planting_Profit_Data/logs/Planting_Profit.log

# Set the immediate flush to true (default)
log4j.appender.LOGFILE.ImmediateFlush=true

# Set the threshold to debug mode
log4j.appender.LOGFILE.Threshold=debug

# Set the append to false, overwrite
log4j.appender.LOGFILE.Append=true

# Print only messages of level WARN or below in the package
log4j.logger.org.hibernate=ERROR
